<%- include('../helpers/topheader'); %>
<%- include('../helpers/menu'); %>
<main>
  <div class="container">
    <div class="row">

    <% for(var i=0; i < eventos.length; i++) { %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img onerror="imgError(this);" src="./public/images/<%=eventos[i].local%>.png" alt="">
          <div class="caption">
            <h3><%=eventos[i].nome%></h3>
            <p><%=eventos[i].descricao%></p>
            <div class="row">
              <div class="col-md-6">
                <button type="button" class="btn-excluir btn-block btn btn-danger" id="<%=eventos[i].id%>">Excluir</button>
              </div>
              <div class="col-md-6">
                <button type="button" class="btn-editar btn-block btn btn-primary" id="<%=eventos[i].id%>">Editar</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% } %>


    </div>
  </div>
</main>
<%- include('../helpers/footer'); %>
<script src="/public/js/eventos/listar.js"></script>
<script src="/public/js/eventos/excluir.js"></script>
